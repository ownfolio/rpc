{
  "private": true,
  "scripts": {
    "build": "npm run --workspaces build",
    "lint:fix": "npm run prettier -- --write; npm run eslint -- --fix",
    "lint": "tsc --noEmit && npm run prettier -- --check && npm run eslint",
    "eslint": "eslint . --ext .ts --ext .tsx --ext .js --quiet",
    "prettier": "prettier './**/tsconfig.json' './**/*.ts' './.github/**/*.yaml'",
    "start:examples:express": "ts-node examples/express/index.ts",
    "test": "vitest",
    "verify": "npm run lint && npm test -- --run"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/express": "^4.17.16",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vitest": "^0.28.3"
  }
}
