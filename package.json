{
  "private": true,
  "scripts": {
    "build": "npm run build --workspaces",
    "lint:fix": "npm run prettier -- --write; npm run eslint -- --fix",
    "lint": "tsc --noEmit && npm run prettier -- --check && npm run eslint",
    "eslint": "eslint . --ext .ts --ext .tsx --ext .js --quiet",
    "prettier": "prettier './**/tsconfig.json' './**/*.ts' './.github/**/*.yaml'",
    "start:examples:express": "ts-node examples/express/index.ts",
    "test": "vitest",
    "verify": "npm run lint && npm test -- --run"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/express": "5.0.5",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "8.46.4",
    "@typescript-eslint/parser": "8.46.4",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.2",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "prettier": "3.6.2",
    "rimraf": "6.1.0",
    "supertest": "7.1.4",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "vitest": "4.0.9"
  }
}
